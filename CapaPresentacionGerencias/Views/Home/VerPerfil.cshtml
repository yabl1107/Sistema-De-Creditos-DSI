
@using CapaEntidad

@{
    Empleado oEmpleado = (Empleado)Session["Empleado"];
}

<style>
    body {
        background: #f7f7ff;
        margin-top: 20px;
        color: #1a202c;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>

<div class="container">

    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Usuario</li>
                <li class="breadcrumb-item active" aria-current="page">Mi perfil</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="">Ver</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("EditarPerfil", "Home")">Editar</a>
            </li>
        </ul>

        <br />

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4 id="txtNombre">@oEmpleado.Nombre</h4>
                                <p class="text-secondary mb-1" id="txtCargo">@oEmpleado.NombrePuesto</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0" id="txtId">Id</h6>
                            <span class="text-secondary">@oEmpleado.IDempleado</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0" id="txtFechaContrato">Fecha contrato</h6>
                            <span class="text-secondary">@oEmpleado.FechaContratacion</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombres</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="txtNombres">
                                @oEmpleado.Nombre
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Apellidos</h6>
                            </div>
                            <div class="col-sm-9 text-secondary" id="txtApellidos">
                                @oEmpleado.Apellidos
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">DNI</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.DNI
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefono</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.Telefono
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Sexo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.Sexo
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Fecha Nacimiento</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.FechaNacimiento
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Salario</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.Salario
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Direccion Ubigeo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @oEmpleado.Ubigeo
                            </div>
                        </div>
                        <hr>

                    </div>
                </div>
