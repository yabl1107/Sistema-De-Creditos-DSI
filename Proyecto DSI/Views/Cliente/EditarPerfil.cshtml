

@using CapaEntidad

@{   
    Cliente oCliente = (Cliente)Session["Cliente"];
}

<style>
    body {
        background: #f7f7ff;
        margin-top: 20px;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .me-2 {
        margin-right: .5rem !important;
    }
</style>

<div class="container">
    <div class="main-body">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Usuario</li>
                <li class="breadcrumb-item active" aria-current="page">Mi perfil</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" aria-current="page" href="@Url.Action("VerPerfil", "Cliente")">Ver</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="">Editar</a>
            </li>
        </ul>

        <br />

        <div class="row">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@oCliente.Nombre</h4>
                                    <p class="text-secondary mb-1" id="txtNombrePuesto">@oCliente.Nombre</p>
                                </div>
                            </div>
                            <hr class="my-4">
                            <div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0">Id</h6>
                                        <span class="text-secondary">@oCliente.idCliente</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-8">

                    <div class="card" id="DatosContent">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombres</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@oCliente.Nombre" id="txtNombres">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Apellidos</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@oCliente.Apellidos" id="txtApellidos">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@oCliente.Correo" id="txtCorreo">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Telefono</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@oCliente.Telefono" id="txtTelefono">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Ubigeo Vivienda</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="@oCliente.UbigeoVivienda" id="txtUbigeoVivienda">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Sexo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <select id="sexo" class="form-select" aria-label="Default select example">
                                        <option value="Hombre" @(oCliente.Sexo == "Hombre" ? "selected" : "")>Hombre</option>
                                        <option value="Mujer" @(oCliente.Sexo == "Mujer" ? "selected" : "")>Mujer</option>
                                        <option value="Otro" @(oCliente.Sexo == "Otro" ? "selected" : "")>Otro</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="button" class="btn btn-primary px-4" value="Guardar cambios" id="GuardarButton">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- *******************   Datos no editables   ************** -->

                    <div class="col-sm-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Fecha Nac.</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @oCliente.FechaNacimiento
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">DNI</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @oCliente.DNI
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Ubigeo Nacim.</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @oCliente.UbigeoNacimiento
                                    </div>
                                </div>
                                <hr>

                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>


        @section scripts{

                <script>
        var tabladata;
        var CrearModal = true; // Saber si se abre crear o editar usuario
        var filaSeleccionada;

            var Cliente = {

                idCliente: '@oCliente.idCliente',
                Apellidos: $("#txtApellidos").val(),
                Correo: $("#txtCorreo").val(),
                Nombre: $("#txtNombres").val(),
                DNI: '@oCliente.DNI',
                Telefono: $("#txtTelefono").val(),
                Sexo: $("#sexo").val(),
                FechaNacimiento: '@oCliente.FechaNacimiento',

                UbigeoVivienda: $("#txtUbigeoVivienda").val(),
                UbigeoNacimiento: '@oCliente.UbigeoNacimiento',

            };

                    console.log(Cliente);
                    

            $("#GuardarButton").on("click", function () {
                //debugger;
                swal({
                    title: "Estas seguro?",
                    text: "Estas a punto de actualizar tu información",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Sí, continuar!",
                    cancelButtonText: "No",
                    closeOnConfirm: false
                },
                    function () {
                        //alert("hadhshd")


                        var Cliente = {

                            idCliente: '@oCliente.idCliente',
                            Apellidos: $("#txtApellidos").val(),
                            Correo: $("#txtCorreo").val(),
                            Nombre: $("#txtNombres").val(),
                            DNI: '@oCliente.DNI',
                            Telefono: $("#txtTelefono").val(),
                            Sexo: $("#sexo").val(),
                            FechaNacimiento: '@oCliente.FechaNacimiento',

                            UbigeoVivienda: $("#txtUbigeoVivienda").val(),
                            UbigeoNacimiento: '@oCliente.UbigeoNacimiento',

                        };



                        

                        jQuery.ajax({
                                url: '@Url.Action("EditarClienteRenovarSesion", "Cliente")',
                                type: "POST",
                                data: JSON.stringify({obj: Cliente}),
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (data) {

                                    if (data.resultado!=0) { //Se actualizó correctamente en la BD

                                        swal("Actualizado!", "Su perfil ha sido actualizado.", "success");
                                    }
                                    else {

                                        swal("No se pudo actualizar", data.mensaje, "error");
                                        //console.log(Trabajador)
                                        //tabladata.row(filaSeleccionada).data(Trabajador).draw(false);
                                    }
                                },
                                error: function (error) {
                                    swal("No se pudo actualizar", data.mensaje, "error");
                                }
                            });



                    });
            });



        function validarNumeros(input) {
            input.value = input.value.replace(/[^\d]/g, ''); // Remueve todo lo que no sea un número
        }



                </script>
        }



