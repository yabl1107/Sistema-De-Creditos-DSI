

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/css/login4.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<style>

    @@charset "utf-8";

[class*="fontawesome-"]:before {
  font-family: 'FontAwesome', sans-serif;
}

/* ---------- GENERAL ---------- */




body {

    color: #606468;
  font: 87.5%/1.5em 'Open Sans', sans-serif;
  margin: 0;
}

a {
	color: #eee;
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}

input {
	border: none;
	font-family: 'Open Sans', Arial, sans-serif;
	font-size: 14px;
	line-height: 1.5em;
	padding: 0;
	-webkit-appearance: none;
}

p {
	line-height: 1.5em;
}


/* ---------- LOGIN ---------- */

#login form{
	width: 250px;
}
#login, .logo {

	display: inline-block;
	width: 40%;
}
#login{
  padding: 0px 22px;
}
.logo {
	color: #fff;
	font-size: 50px;
	line-height: 50px;
}

#login form span.fa {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
    font-size:24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}

.Button1 {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
	font-size: 24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}

.Button2 {
	border-radius: 3px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	background-color: #000000;
	color: #eee;
	font-weight: bold;
	/* margin-bottom: 2em; */
	text-transform: uppercase;
	padding: 5px 10px;
	height: 30px;
}

.etiqueta {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
	font-size: 24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}


#login form input {
	height: 50px;
}

#login form input[type="text"], input[type="password"] {
	background-color: #fff;
	border-radius: 0px 3px 3px 0px;
	color: #000;
	margin-bottom: 1em;
	padding: 0 16px;
	width: 200px;
}

#login form input[type="submit"] {
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  background-color: #000000;
  color: #eee;
  font-weight: bold;
  /* margin-bottom: 2em; */
  text-transform: uppercase;
  padding: 5px 10px;
  height: 30px;
}

	#login form input[type="submit"]:hover {
		background-color: #83acde;
	}

#login > p {
	text-align: center;
}



.right-box {
	padding-left: 20px;
}

.inside-righ-box {
	border-left: 2px solid #fff; /*Linea separadora*/
	padding-top: 5px;
	padding-left: 20px;
}

.left-box {
	padding-right: 0px;
	padding-top: 5px;
	text-align: left;
}



</style>
<body style="background-color: rgb(15,71,151);" class="d-flex align-items-center justify-content-center">

   
        <div>

            <div id="login" class="container d-flex justify-content-center">

                <div >

                    <div class="mb-2 mb-sm-5">
                        <!--Botones-->
                        <ul class="nav nav-pills nav-fill mt-0">
                            <li class="nav-item mb-1">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("RealizarSolicitud", "Cliente")">Login</a>
                            </li>
                            <li class="nav-item mb-1">
                                <a class="nav-link text-white" href="@Url.Action("Registrar", "Acceso")">Registrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("About", "Acceso")">Acerca de</a>
                            </li>
                        </ul>
                    </div>


                    <div class="d-flex flex-row ">
                        <!--Login-->

                        <div class="left-box">
                            <form action="@Url.Action("Login","Acceso")" method="post">

                                <div class="d-flex flex-row">
                                    <div><span class="fa fa-envelope"> </span></div>
                                    <input type="text" name="Correo" Placeholder="Correo" required>
                                </div>


                                <div class="d-flex flex-row">
                                    <div><span class="fa fa-lock"></span></div>
                                    <input type="password" name="Clave" Placeholder="Password" required>
                                </div>

                                <span style="width:48%; text-align:left;  display: inline-block;">
                                    <a class="small-text" href="#">
                                        Forgot password?
                                    </a>
                                </span>
                                <span style="width:50%; text-align:right;  display: inline-block;"><input type="submit" value="Sign In"></span>

                            </form>
                        </div> <!-- end left-box -->

                        <div class="d-none d-md-block right-box">
                            <div class="logo inside-righ-box">
                                Vehicle Financing Company
                            </div>
                        </div> <!-- end right-box -->
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger my-5" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }

                    <footer class="text-center  mt-5">
                        <!--Fecha-->
                        <p class="fs-5 py-0 my-0 text-black-50">&copy; @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                        <p class="fs-5 py-0 my-0 text-black-50">Lima, Perú</p>
                    </footer>

                </div>

            </div>
        </div>

  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>