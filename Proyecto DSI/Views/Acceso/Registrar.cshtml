


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
</head>

<style>
    @@charset "utf-8";


@@import url//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css);





[class*="fontawesome-"]:before {
  font-family: 'FontAwesome', sans-serif;
}

/* ---------- GENERAL ---------- */



body {

  color: #606468;
  font: 87.5%/1.5em 'Open Sans', sans-serif;
  margin: 0;
}

a {
	color: #eee;
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}

input {
	border: none;
	font-family: 'Open Sans', Arial, sans-serif;
	-webkit-appearance: none;
}

p {
	line-height: 1.5em;
}




/* ---------- LOGIN ---------- */


#login form span.fa {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
    font-size:24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}

.Button1 {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
	font-size: 24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}



.etiqueta {
	background-color: #fff;
	border-radius: 3px 0px 0px 3px;
	color: #000;
	display: block;
	float: left;
	height: 50px;
	font-size: 24px;
	line-height: 50px;
	text-align: center;
	width: 50px;
}


#login form input {
	height: 50px;
}

    #login form select.form-select {
        height: 50px;
    }

        #login form input[type="text"], input[type="password"], input[type="date"], input[type="number"] {
        background-color: #fff;
        border-radius: 0px 3px 3px 0px;
        color: #000;
        margin-bottom: 1em;
        padding: 0 16px;
        width: 200px;
    }


    #login form select.form-select {
        background-color: #fff;
        border-radius: 0px 3px 3px 0px;
        color: #000;
        margin-bottom: 1em;
        padding: 0 16px;
        width: 200px;
    }

#login form input[type="submit"] {
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  background-color: #000000;
  color: #eee;
  font-weight: bold;
  /* margin-bottom: 2em; */
  text-transform: uppercase;
  padding: 5px 10px;
  height: 30px;
}

	#login form input[type="submit"]:hover {
		background-color: #83acde;
	}


</style>

<body>
    <main>
        <div style="background-color: rgb(15,71,151);">
                      
            <div id="login" class="container d-flex">
                
                <div>
                    <br /><br /><br /><br />


                    <div class="mb-2 mb-sm-5">
                        <!--Botones-->
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item mb-1">
                                <a class="nav-link text-white" href="@Url.Action("Login", "Acceso")">Login</a>
                            </li>
                            <li class="nav-item mb-1">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Registrar", "Acceso")">Registrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("About", "Acceso")">Acerca de</a>
                            </li>
                        </ul>
                    </div>





                    <form action="@Url.Action("Registrar","Acceso")" method="post" class="row g-2">

                        <div class="col-6 d-flex justify-content-end ">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="Nombre" Placeholder="Nombre" required>
                        </div>

                        <div class="col-6 d-flex">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="Apellidos" Placeholder="Apellido" required>
                        </div>

                        <div class="col-6 d-flex justify-content-end ">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="DNI" Placeholder="DNI" oninput="validarNumeros(this)" required>
                        </div>

                        <div class="col-6 d-flex">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="date"  name="FechaNacimiento"  class="form-control" id="txtFechaNacimiento" placeholder="FechaNacimiento" required>
                        </div>


                        <div class="col-6 d-flex justify-content-end ">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="UbigeoNacimiento" Placeholder="Ubigeo Nacimiento" oninput="validarNumeros(this)" required>
                        </div>

                        <div class="col-6 d-flex">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="Telefono" Placeholder="Telefono" oninput="validarNumeros(this)" required>
                        </div>
                        <div class="col-6 d-flex justify-content-end ">
                            <div><span class="fa fa-user"> </span></div>
                            <input type="text" name="UbigeoVivienda" Placeholder="UbigeoVivienda" oninput="validarNumeros(this)" required>
                        </div>



                        <div class="col-6 d-flex">
                            <div><span class="fa fa-user"> </span></div>
                            <select id="sexo" name="Sexo" class="form-select" aria-label="Default select example">
                                <option value="Hombre">Hombre</option>
                                <option value="Mujer">Mujer</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>

                        <div class="col-6 d-flex justify-content-end">
                            <div><span class="fa fa-envelope"> </span></div>
                            <input type="text" name="Correo" Placeholder="Correo" required>
                        </div>


                        <div class="col-6 d-flex">
                            <div><span class="fa fa-lock"></span></div>
                            <input type="password" name="Clave" Placeholder="Contraseña" required>
                        </div>
                        <div class="col-12 d-flex justify-content-center">
                            <div><span class="fa fa-lock"></span></div>
                            <input type="password" name="ConfirmarClave" Placeholder="Confirmar Contraseña" required>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        <span class="d-flex justify-content-center"><input type="submit" value="Registrarse"></span>
                    </form>


                        <footer class="text-center  mt-5">
                            <!--Fecha-->
                            <p class="fs-5 py-0 my-0 text-black-50">&copy; @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="fs-5 py-0 my-0 text-black-50">Lima, Perú</p>
                        </footer>

               
                </div>
            </div>
        </div>

    </main>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



<script>

    function validarNumeros(input) {
        input.value = input.value.replace(/[^\d]/g, ''); // Remueve todo lo que no sea un número
    }

</script>

</body>

</html>